<Window x:Class="UserRegistrationApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="User Registration" Height="350" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Register New User" FontSize="20" HorizontalAlignment="Center" Margin="0,10,0,20"/>

            <TextBlock Text="Name:"/>
            <TextBox Name="NameTextBox" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Email:"/>
            <TextBox Name="EmailTextBox" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Password:"/>
            <PasswordBox Name="PasswordBox" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Faculty Number:"/>
            <TextBox Name="FacNumTextBox" Width="200" Margin="0,0,0,10"/>

            <Button Content="Register" Width="100" HorizontalAlignment="Center" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
