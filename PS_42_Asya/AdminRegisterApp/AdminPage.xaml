<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdminRegisterApp.AdminPage"
             Title="AdminPage">
    <StackLayout Padding="10">
        <Label Text="Admin Page" FontSize="32" HorizontalOptions="Center" />
        <ListView ItemsSource="{Binding Users}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Names}" Detail="{Binding Email}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Entry Placeholder="Name" Text="{Binding NewUserNames}" />
        <Entry Placeholder="Email" Text="{Binding NewUserEmail}" />
        <Entry Placeholder="Password" IsPassword="True" Text="{Binding NewUserPassword}" />
        <Entry Placeholder="Faculty Number" Text="{Binding NewUserFacNum}" />
        <Button Text="Register User" Command="{Binding RegisterUserCommand}" />
    </StackLayout>
</ContentPage>